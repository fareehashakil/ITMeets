<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/grad_bg">

    <RelativeLayout
        android:id="@+id/rellay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <ImageView
            android:layout_marginTop="25dp"
            android:id="@+id/imgView_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/logo2" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linlay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rellay1"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rellay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:paddingTop="30dp">

            <ImageView
                android:id="@+id/imgView_Home"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/home"
                />

            <TextView
                android:id="@+id/tv_home"
                android:layout_below="@id/imgView_Home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:paddingLeft="35dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:textAllCaps="false"
                />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <RelativeLayout
            android:id="@+id/rellay3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="200dp"
            android:paddingTop="155dp">

            <ImageView
                android:id="@+id/imgView_Profie"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/profile"
                />

            <TextView
                android:id="@+id/tv_profile"
                android:layout_below="@id/imgView_Profie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:paddingLeft="35dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:textAllCaps="false"
                />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlay3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rellay1"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rellay4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:paddingTop="210dp">

            <ImageView
                android:id="@+id/imgView_Elibrary"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/elibrary"
                />

            <TextView
                android:id="@+id/tv_ELibrary"
                android:layout_below="@id/imgView_Elibrary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-Library"
                android:paddingLeft="25dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:textAllCaps="false"
                />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlay4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="38dp">

        <RelativeLayout
            android:id="@+id/rellay5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="200dp"
            android:paddingTop="335dp">

            <ImageView
                android:id="@+id/imgView_JobAnalytics"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/jobanalytics"
                />

            <TextView
                android:id="@+id/tv_jobAnalytics"
                android:layout_below="@id/imgView_JobAnalytics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Analytics"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:textAllCaps="false"
                />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/linlay4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/grad"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_margin="45dp"/>

</RelativeLayout>

</ScrollView>